    <TargetFramework>net472</TargetFramework>
    <RootNamespace>DEHPSTEPAP242</RootNamespace>
    <UseWPF>true</UseWPF>
    <AssemblyTitle>DEHPSTEPAP242</AssemblyTitle>
    <Company>Open Engineering S.A.</Company>
    <Product>DEHPSTEPAP242</Product>
