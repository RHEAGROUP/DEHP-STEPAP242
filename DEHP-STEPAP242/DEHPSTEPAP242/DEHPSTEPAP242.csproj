    <AssemblyVersion>1.0.0.0</AssemblyVersion>
    <FileVersion>1.0.0.0</FileVersion>
    <LangVersion>latest</LangVersion>
    <StartupObject>DEHPSTEPAP242.App</StartupObject>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Resources\OpcClient.Config.xml" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Autofac" Version="6.0.0" />
    <PackageReference Include="DEHPCommon" Version="1.0.100" />
    <PackageReference Include="DevExpress.WindowsDesktop.Wpf.Layout" Version="20.1.8" />
